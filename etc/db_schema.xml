<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="aiti_product_responsible_user" resource="default" engine="innodb" comment="Aiti product responsible user Table">
		<column xsi:type="int" name="user_id" unsigned="true" nullable="false" identity="true" comment="User Id"/>
		<column xsi:type="varchar" name="firstname" nullable="false" comment="Users first name"/>
		<column xsi:type="varchar" name="lastname" nullable="false" comment="Users last name"/>
		<column xsi:type="varchar" name="department" nullable="false" comment="Users department"/>
		<column xsi:type="datetime" name="created_at" default="CURRENT_TIMESTAMP" nullable="false" comment="Users department"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="user_id"/>
		</constraint>
	</table>
</schema>
